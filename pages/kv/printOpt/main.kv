<ButtonRound@Button>:
    font_size: root.height*.2
    font_size: root.width*.2
    background_normal: ''
    background_color: 1,1,1,0
    size_hint: 0.15, 0.12

<Label_Checkbox@Label>:
    font_size: root.width*.035
    font_size: root.height*.035
    color: 0,0,0,1
    text_size: self.size
    halign: 'left'
    valign: 'middle'

<Btn_Advanced@Button>:
    size_hint: 0.1, 0.0675
    color: 0.3,0.3,0.3,1
    background_normal: ''
    background_color: 1,1,1,0
    font_size: root.width*.325
    font_size: root.height*.325

<FloatLayout_background@FloatLayout>:
    id: bground
    canvas:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: root.width*0.03,root.width*0.03,root.width*0.03,root.width*0.03

<Label_kb@Label>:
    size_hint: 0.12, 0.15
    canvas:
        Color:
            rgba: rgba("#d9d9d9")
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: root.width*0.2,root.width*0.2,root.width*0.2,root.width*0.2

<Button_kb@Button>:
    color: 0,0,0,1
    background_normal: ''
    background_color: 1,1,1,0
    font_size: root.height*0.6
    size_hint: 0.12, 0.15

<PrintScreen>:
