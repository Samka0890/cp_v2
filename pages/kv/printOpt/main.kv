    name: "print_screen"
    rightButton: rightButton
    leftButton: leftButton
    imageView: imageView
    slider: slider
#-----------------------------------------BACK AND PRINT BUTTON------------------------------------
    FloatLayout:
    	Label:
            pos_hint: {'x': -.009, 'y': -0.011}
            canvas:
                Rectangle:
                    source: 'pages/kv/assets/images/shadow1.png'
                    size: root.width*0.205,root.height*0.185
                    pos: self.pos
        Label:
            pos_hint: {'x': .02, 'y': 0.025}
