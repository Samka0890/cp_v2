            id: offline_btn
            text: "Буцах"
            pos_hint: {'x': .02, 'y': 0.025}
            on_press:
                slider.value = 1
            	root.return_page()
                root.reset_timer()
                pageNum_input.text = ''
                copies_input.text = '1'
                lab_colorful.pos_hint = {'x': .475, 'y': .275}
                root.color_choose('-color')
                lab_all.opacity = 1
                lab_custom.opacity = 0
                pageNum_input.opacity = 0
                pageNum_input.disabled = True
                btn_custom.color = 0,0,0,1
                btn_all.color = 0.95,0.95,0.95,1
                all_caption.opacity = 1
                root.page_value(True)
                pageNum_input.text = ''
                Error_comment.text = ''
                lab_colorful.pos_hint= {'x': .475, 'y': .275}
                lab_colorful.opacity = 1
                lab_colorless.disabled = False
                lab_colorless.opacity = 1
                lab_colorless.pos_hint = {'x': 0.465, 'y': 0.3}
                btn_colorless.disabled = False
                btn_colorless.opacity = 1
                btn_colorless.pos_hint = {'x': 0.7, 'y': 0.3}
