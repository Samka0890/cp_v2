        Label:
            text: "Холбоо барих : 89810890"
            pos_hint: {'x': 0, 'y': -.3}
            font_size: root.height*0.02
            color: rgba("#555555")


 ######################### help button #########################
    FloatLayout:
        ImageButton:
            id: help_icon
            opacity: 1
            source: 'pages/kv/main/images/help.jpg'
            size_hint: 0.125, 0.125
            pos_hint: {'x': 0.8875, 'y': 0.05}
            on_press:
                introduction.opacity = 1
