<MainScreen>:
    name: "main_screen"
    FloatLayout:
        LabelBtn:
            size_hint: .3, .6
            pos_hint: {'x': .175, 'y': 0.2}
            opacity:.8
            on_press:
                introduction.pos = root.width, root.height*0.2
                root.manager.transition.direction = 'right'
                root.manager.current = "online_screen"
                introduction.opacity = 0
                root.cancel_clock()
                root.sound_main()
            canvas:
                Color:
                    rgba: rgba("#b2edd4")
                RoundedRectangle:
                    size: root.width*0.3,root.height*0.6
                    pos: self.pos
                    radius: root.width*0.03,root.width*0.03,root.width*0.03,root.width*0.03
        ImageButton:
            source: 'pages/kv/main/images/world.png'
            size_hint: .3, .4
            pos_hint: {'x': .175, 'y': 0.355}
            on_press:
                introduction.pos = root.width, root.height*0.2
                root.manager.transition.direction = 'right'
                root.manager.current = "online_screen"
                introduction.opacity = 0
                root.cancel_clock()
                root.sound_main()

        Label:
            text: "Онлайн Горим"
            pos_hint: {'x': -.175, 'y': -.2}
            font_size: root.height*0.05
            color: rgba("#17574a")
        Label:
        	id: touchLabel
            opacity: .5
            pos_hint: {'x': .31, 'y': .21}
            canvas:
                Rectangle:
                    source: 'pages/kv/main/images/touchFinger.png'
                    size: root.width*0.04,root.height*0.04
                    pos: self.pos
    FloatLayout:
        LabelBtn:
            opacity: 1
            size_hint: .3, .6
            pos_hint: {'x': .525, 'y': 0.2}
            on_press:
                introduction.pos = root.width, root.height*0.2
                root.manager.transition.direction = 'left'
                root.manager.current = "offline_screen"
                introduction.opacity = 0
                root.cancel_clock()
                root.sound_main()
            canvas:
                Color:
                    rgba: rgba("#f5dfda")
                RoundedRectangle:
                    size: root.width*0.3,root.height*0.6
                    pos: self.pos
                    radius: root.width*0.03,root.width*0.03,root.width*0.03,root.width*0.03
        ImageButton:
            source:'pages/kv/main/images/flashDrive.png'
            pos_hint: {'x': .525, 'y': .355}
            size_hint: .3, .4
            on_press:
                introduction.pos = root.width, root.height*0.2
                root.manager.transition.direction = 'left'
                root.manager.current = "offline_screen"
                introduction.opacity = 0
                root.cancel_clock()
                root.sound_main()
        Label:
            text: "Энгийн Горим"
            pos_hint: {'x': .175, 'y': -.2}
            font_size: root.height*0.05
            color: rgba("#17574a")
        Label:
            id: touchLabel
            opacity: .5
            pos_hint: {'x': .66, 'y': .21}
            canvas:
                Rectangle:
                    source: 'pages/kv/main/images/touchFinger.png'
                    size: root.width*0.04,root.height*0.04
                    pos: self.pos
        Label:
            text: "ХЭВЛЭХ ҮЙЛЧИЛГЭЭ"
            pos_hint: {'x': .0, 'y': .4}
            font_size: root.height*0.04
            color: rgba("#17574a")
        Image:
            size_hint: .075, .075
            pos_hint: {'x': .465,'y': .92}
            source: 'pages/kv/main/images/CP_logo.png'

#----------------------------LAbEL AND TIME---------------------------------
    FloatLayout:
        size_hint: 1, .1
        pos_hint: {'x': 0, 'y': 0}
